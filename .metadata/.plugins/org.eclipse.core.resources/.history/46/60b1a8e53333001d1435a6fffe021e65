package array;

public class Ex4 {

	public static void main(String[] args) {

		int[][] arr = new int[3][2];
		
		arr[0][0] = 1; arr[0][1] =2;
		arr[1][0] = 3; arr[1][1] =4;
		arr[2][0] = 5; arr[2][1] =6;
		
//		System.out.println(arr[0][0]);
//		System.out.println(arr[0][1]);
//		System.out.println(arr[1][0]);
//		System.out.println(arr[1][1]);
//		System.out.println(arr[2][0]);
//		System.out.println(arr[2][1]);
		
		System.out.println("배열 arr 행의 크기 : "+arr.length);
		System.out.println("배열 arr 0행의 열의 크기 : "+arr[0].length);
		System.out.println("배열 arr 1행의 열의 크기 : "+arr[1].length);
		System.out.println("배열 arr 2행의 열의 크기 : "+arr[2].length);
		System.out.println("===================================");
		
		for(int i=0;i<arr.length;i++) {
			
			for(int j=0;j<arr[i].length;j++) {
				System.out.print(arr[i][j]+ " ");
			}
			System.out.println();
		}
		
		System.out.println("==================================");
	
		int[][] arr2 = { 
				{1,2},
				{3,4},
				{5,6}
			};
	
	
	
	
	
	
	
	
	
	
	
	}
}
